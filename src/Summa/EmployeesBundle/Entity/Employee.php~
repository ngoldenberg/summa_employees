<?php

namespace Summa\EmployeesBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use JMS\Serializer\Annotation as JMS;
use Summa\EmployeesBundle\Entity\Company;


/**
 * @ORM\Table("employees")
 * @ORM\Entity
 */
class Employee
{
    /**
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    protected $id;

    /**
     * @ORM\Column(type="string", length=25)
     */
    private $name;

    /**
     * @ORM\Column(type="string", length=50)
     */
    private $surname;

    /**
     * @ORM\Column(type="integer")
     */
    private $age;

    /**
     * @ORM\Column(type="integer")
     * @JMS\SerializedName("typeId")
     * @JMS\Groups({"ids"})
     */
    private $typeId;

    /**
     * @ORM\ManyToOne(targetEntity="EmployeeType")
     * @ORM\JoinColumn(name="type_id", referencedColumnName="id")
     */
    private $type;


    /**
     * @ORM\Column(type="integer")
     * @JMS\SerializedName("companyId")
     * @JMS\Groups({"ids"})
     */
    private $companyId;

    /**
     * @ORM\ManyToOne(targetEntity="Company", inversedBy="designers")
     * @ORM\JoinColumn(name="company_id", referencedColumnName="id")
     * @JMS\Groups({"company"})
     */
    private $company;

    /**
     * @ORM\Column(type="boolean")
     */
    private $active = true;

}
